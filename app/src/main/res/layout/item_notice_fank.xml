<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_fankxx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="派出所发来反馈"
        android:textColor="@color/common_text_black_color" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_fank_medias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_fankr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:text="张三"
            android:textColor="@color/common_text_gray_color" />

        <TextView
            android:id="@+id/tv_fank_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="2017年4月24日15:59:51"
            android:textColor="@color/common_text_gray_color" />
    </LinearLayout>


</LinearLayout>