<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_mian_menu_header" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:id="@+id/rl_jiecj"
                android:layout_weight="2"
                android:background="@drawable/selector_main_jiecj">

                <TextView
                    android:id="@+id/tv_jiecj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawablePadding="10dp"
                    android:drawableTop="@drawable/ic_mian_menu_jiecj"
                    android:gravity="center"
                    android:text="接处警"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_jiecj_msg_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/tv_jiecj"
                    android:layout_alignTop="@+id/tv_jiecj"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="-15dp"
                    android:layout_marginTop="-15dp"
                    android:background="@drawable/ic_message_count_bg"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:id="@+id/rl_zonghcx"
                android:background="@drawable/selector_main_zonghcx">


                <TextView
                    android:id="@+id/tv_zonghcx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/ic_mian_menu_zonghcx"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:text="综合查询"
                    android:textColor="@color/white" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:id="@+id/rl_yucfg"
                android:background="@drawable/selector_main_yucfg">

                <TextView
                    android:id="@+id/tv_yucfg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/ic_mian_menu_yucfg"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:text="预测方格"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/rl_bufbk"
                    android:background="@drawable/selector_main_bufbk">

                    <TextView
                        android:id="@+id/tv_bufbk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawableLeft="@drawable/ic_mian_menu_bufbk"
                        android:drawablePadding="10dp"
                        android:gravity="center"
                        android:text="布防布控"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_bufbk_msg_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/tv_bufbk"
                        android:layout_alignTop="@+id/tv_bufbk"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="-15dp"
                        android:layout_marginTop="-15dp"
                        android:background="@drawable/ic_message_count_bg"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="@color/white"
                        android:textSize="10sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:id="@+id/rl_tongzgg"
                    android:background="@drawable/selector_main_tongzgg">

                    <TextView
                        android:id="@+id/tv_tongzgg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawableLeft="@drawable/ic_mian_menu_tongzgg"
                        android:drawablePadding="10dp"
                        android:gravity="center"
                        android:text="通知公告"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_tongzgg_msg_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/tv_tongzgg"
                        android:layout_alignTop="@+id/tv_tongzgg"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="-15dp"
                        android:layout_marginTop="-15dp"
                        android:background="@drawable/ic_message_count_bg"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="@color/white"
                        android:textSize="10sp" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:id="@+id/rl_qingqfw"
                android:background="@drawable/selector_main_qingqfw">

                <TextView
                    android:id="@+id/tv_qingqfw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/ic_mian_menu_qingqfw"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:text="请求服务"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:id="@+id/rl_tongxl"
                android:layout_weight="1"
                android:background="@drawable/selector_main_tongxl">

                <TextView
                    android:id="@+id/tv_tongxl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/ic_mian_menu_tongxl"
                    android:drawablePadding="10dp"
                    android:text="通讯录"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_foot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_color_0"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="首页"
            android:textColor="#7CA3FF" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/gray_color_1"
            android:padding="2dp"></View>

        <TextView
            android:id="@+id/tv_mine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="我的"
            android:textColor="@drawable/selector_textview_home_mine" />
    </LinearLayout>
</LinearLayout>